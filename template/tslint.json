{
  "extends": "./node_modules/gts/tslint.json",
  "rules": {
    "quotemark": [true, "single"],
    "indent": [
      true,
      "spaces",
      2
    ],
    "comment-format": [
      true,
      "check-space"
    ],
    "no-eval": true,
    "one-line": [
      true,
      "check-open-brace",
      "check-whitespace"
    ],
    "typedef-whitespace": [
      true,
      {
        "call-signature": "nospace",
        "index-signature": "nospace",
        "parameter": "nospace",
        "property-declaration": "nospace",
        "variable-declaration": "nospace"
      }
    ]
  }
}
