{
  "compilerOptions": {
    "baseUrl": ".",
    "plugins": [{"name": "typescript-tslint-plugin"}, { "transform": "ts-optchain/transform" }], // webstorm/vscode highlight vue files with tslint
    "resolveJsonModule": true,
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["es2017", "dom"],
    "declaration": false,
    "target": "es5",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "forceConsistentCasingInFileNames": true,
    "noEmitOnError": false, // without it, webpack wouldn't resolve vue files without exxtension
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.vue"
  ],
  "exclude": [
    "node_modules"
  ]
}

